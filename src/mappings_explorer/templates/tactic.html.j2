{% import "./macros.html.j2" as macros %}
{% extends "base.html.j2" %}

{% block content %}
<div id="my_view">
{% include "_banner.html.j2" %}

   <section id="header-container" class="header-container">
    <div class="container">
      {% include "_breadcrumbs.html.j2" %}
      <div class="row justify-content-left">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <h1 style="text-transform: uppercase;"> {{tactic.id}} <span class="highlight">{{ tactic.label }}</span> Mappings</h1>
          {%-markdown-%}
          <p>{{tactic.description}}</p>
          {%-endmarkdown-%}
          <a href="https://attack.mitre.org/versions/v{{attack_version.split('.')[0]}}/tactics/{{tactic.id}}" target="_blank" rel="noopener noreferrer"">
            View in MITRE ATT&CKÂ®
          </a>
        </div>
      </div>
    </div>
  </section>
  <section id="attack-table" class="mapping-table">
    <div class="container" data-aos="fade-up">
      <div class="row justify-content-left">
        <div class="row" style="padding: 0;">
          <div class="col-xl-4 col-lg-12">
            <h2 style="width: max-content">ATT&CK Techniques</h2>
            </div>
            <div class="col-xl-8 col-lg-12 badges">
              {% include "_badge_section.html.j2" %}
            </div>
        </div>
        <div class="col-12">
            {{ macros.table(standard_headers, undefined, mappings, url_prefix, table_max_count, full_link, full_size) }}
        </div>
      </div>
    </div>
  </section>
</div>
{% endblock content %}
