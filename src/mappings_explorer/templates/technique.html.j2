{% import "./macros.html.j2" as macros %}
{% extends "base.html.j2" %}

{% block content %}
<div id="my_view">
{% include "_banner.html.j2" %}

   <section id="header-container" class="header-container">
    <div class="container" data-aos="fade-up">
      {% include "_breadcrumbs.html.j2" %}
      <div class="row justify-content-left">
        <div class="col-lg-12 col-md-12 col-sm-12">
          <h1 style="text-transform: uppercase;"> {{technique.id}} <span class="highlight">{{ technique.label }}</span> Mappings</h1>
          {%-markdown-%}
            {{technique.description}}
          {%-endmarkdown-%}
        </div>
      </div>
    </div>
  </section>
  <section id="mappings-table" class="mapping-table">
    <div class="container" data-aos="fade-up">
      <div class="row justify-content-left">
        <div class="row">
            <div class="col-lg-4 col-md-12">
            <h2 style="width: max-content">Mappings</h2>
            </div>
            <div class="col-lg-8 col-md-12" style="margin-left: auto;">
            {% include "_badge_section.html.j2" %}
            </div>
        </div>
        <div class="col-12">
            {{ macros.table(headers, mappings, url_prefix) }}
        </div>
      </div>
    </div>
  </section>
  {% if subtechniques %}
  <section id="attack-table" class="mapping-table">
    <div class="container" data-aos="fade-up">
      <div class="row justify-content-left">
        <div class="row" style="padding: 0;">
          <div class="col-xl-4 col-lg-12">
            <h2 style="width: max-content">ATT&CK Subtechniques</h2>
          </div>
          <div class="col-xl-8 col-lg-12 badges">
            {% include "_badge_section.html.j2" %}
          </div>
        </div>
        <div class="col-12">
            {{ macros.table(technique_headers, subtechniques, url_prefix) }}
        </div>
      </div>
    </div>
  </section>
  {% endif %}
  <section id="references" class="references">
    <div class="container" data-aos="fade-up">
      <div class="row justify-content-left">
        <h2>REFERENCES</h2>
        <ul>
          <li><a href="https://attack.mitre.org/versions/v{{attack_version.split('.')[0]}}/techniques/{{technique.id}}" target="_blank" rel="noopener noreferrer">ATT&CK Tactic Documentation</a></li>
        </ul>
      </div>
    </div>
  </section>
</div>
{% endblock content %}
